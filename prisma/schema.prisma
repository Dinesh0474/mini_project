generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id            String    @id @default(uuid())
  username      String    @unique
  fullName      String?
  age           Int?
  profession    String?
  email         String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())

  tweets        Tweet[]
  replies       Reply[]
  likes         Like[]
  bookmarks     Bookmark[]
}

model Tweet {
  id          String   @id @default(uuid())
  text        String
  user        Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  hashtags    String[]
  imagePath   String?
  createdAt   DateTime @default(now())

  replies     Reply[]
  likes       Like[]
  bookmarks   Bookmark[]
}

model Reply {
  id        String   @id @default(uuid())
  text      String
  user      Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  tweet     Tweet?   @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId   String?
  parent    Reply?   @relation("ReplyToReply", fields: [replyId], references: [id], onDelete: Cascade)
  replyId   String?
  children  Reply[]  @relation("ReplyToReply")
  createdAt DateTime @default(now())
}

model Like {
  id        String   @id @default(uuid())
  user      Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  tweet     Tweet    @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId   String
  createdAt DateTime @default(now())

  @@unique([userId, tweetId])  // Ensures a user can like a tweet only once
}

model Bookmark {
  id        String   @id @default(uuid())
  user      Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  tweet     Tweet    @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId   String
  createdAt DateTime @default(now())

  @@unique([userId, tweetId])  // Ensures a user can bookmark a tweet only once
}
